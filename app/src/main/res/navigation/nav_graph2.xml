<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph2"
    app:startDestination="@id/randomMeal">
    <fragment
        android:id="@+id/randomMeal"
        android:name="com.example.foodplanner.View.Menu.RandomMealFragment"
        android:label="randomMeal"
        tools:layout="@layout/fragment_random_meal" />
    <fragment
        android:id="@+id/nameSearchFragment"
        android:name="com.example.foodplanner.View.Menu.NameSearchFragment"
        android:label="fragment_name_search"
        tools:layout="@layout/fragment_name_search" />
    <fragment
        android:id="@+id/categorySearchFragment"
        android:name="com.example.foodplanner.View.Menu.CategorySearchFragment"
        android:label="fragment_category_search"
        tools:layout="@layout/fragment_category_search" >
        <action
            android:id="@+id/action_categorySearchFragment_to_mealsFragment"
            app:destination="@id/mealsFragment"
            app:popUpTo="@id/categorySearchFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/countrySearchFragment"
        android:name="com.example.foodplanner.View.Menu.CountrySearchFragment"
        android:label="fragment_country_search"
        tools:layout="@layout/fragment_country_search" />
    <fragment
        android:id="@+id/ingredientSearchFragment"
        android:name="com.example.foodplanner.View.Menu.IngredientSearchFragment"
        android:label="fragment_ingredient_search"
        tools:layout="@layout/fragment_ingredient_search" />
    <fragment
        android:id="@+id/mealsFragment"
        android:name="com.example.foodplanner.View.Menu.MealsFragment"
        android:label="fragment_meals"
        tools:layout="@layout/fragment_meals" >
        <argument
            android:name="categoryName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/mealDetailsFragment"
        android:name="com.example.foodplanner.MealDetailsFragment"
        android:label="fragment_meal_details"
        tools:layout="@layout/fragment_meal_details" />
</navigation>